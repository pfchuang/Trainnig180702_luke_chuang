﻿<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/kendo.common-material.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/kendo.material.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/uikit.min.css" rel="stylesheet" type="text/css">
    <script src="~/Scripts/Resource/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/Resource/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/Resource/bootstrap.min.js"></script>
    <script src="~/Scripts/Resource/kendo.all.min.js"></script>
    <script src="~/Scripts/Resource/uikit.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("圖書管理系統", "Index", "Book", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Book Management System</p>
        </footer>
    </div>
</body>
</html>
